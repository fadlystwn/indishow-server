<div>
  <% @artists.each do |artist| %>
    <h2><%= artist.name %></h2>
    <p><strong>Genre:</strong> <%= artist.genre %></p>
    <p><strong>Bio:</strong> <%= artist.bio %></p>


    <%= link_to 'Edit', edit_artist_path(artist) %> |
    <%= link_to 'View', artist_path(artist)%> |
    <%= link_to 'Delete', artist_path(artist), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this artist?' } %>
    <%= link_to 'Add Album', new_artist_album_path(artist)%>
    <hr>
  <% end %>
</div>
